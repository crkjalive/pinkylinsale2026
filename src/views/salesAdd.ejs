    <div class="form_container">
      <form action="/sales/add" method="POST">
        <h3 class="saleError"><%= data[0].reference %></h3>
        <input type="number" name="reference" value="<%= %>" required />
        <input type="text" name="detail" placeholder="DescripciÃ³n del producto" required />
